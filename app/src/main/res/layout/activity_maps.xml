<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:weightSum="1">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorText"
            android:gravity="left|center_vertical"
            android:background="@color/addColor"
            android:paddingLeft="25dp"
            android:text="Add Location"
            android:id="@+id/addLocation"
            android:drawableRight="@drawable/add_circle"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorText"
            android:gravity="left|center_vertical"
            android:background="@color/removeColor"
            android:paddingLeft="25dp"
            android:text="Remove Location"
            android:id="@+id/removeLocation"
            android:drawableRight="@drawable/remove_circle"/>

        <fragment xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context="example.testgooglemapapi.MapsActivity"
            android:layout_weight="0.48" />
    </LinearLayout>
</FrameLayout>






